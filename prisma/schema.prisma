generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model users {
  id        String @id 
  firstName String
  lastName  String
  type      String

  clients   clients[]
  technicals technicals[]
}

model clients {
  id      String    @id @default(uuid())
  email     String @unique
  user    users     @relation(fields: [usersId], references: [id])
  usersId String
  service service[]
}

model technicals {
  id      String    @id @default(uuid())
  email     String @unique
  user    users     @relation(fields: [usersId], references: [id])
  usersId String
  service service[]
}

model service {
  id           String     @id @default(uuid())
  status       String
  accepted     Boolean    @default(false)
  serviceType  String
  description  String
  solution     String
  clientsId    String
  technicalsId String
  client       clients    @relation(fields: [clientsId], references: [id])
  technical    technicals @relation(fields: [technicalsId], references: [id])
}
